# IIT KGP Internship Agent - Environment Configuration
# Copy this file to .env and fill in your API keys

# Google API Key (required for Gemini)
# Get it from: https://aistudio.google.com/apikey
GOOGLE_API_KEY=your-google-api-key

# Serper API Key (required for research enrichment)
# Get free tier (2500 queries/month): https://serper.dev
SERPER_API_KEY=your-serper-api-key

# Scraper settings
SCRAPER_DELAY=2.0      # Delay between requests (seconds)
SCRAPER_TIMEOUT=30     # Request timeout (seconds)

# Output directories
DATA_DIR=./data
OUTPUT_DIR=./data/outputs

# Logging
LOG_LEVEL=INFO         # DEBUG, INFO, WARNING, ERROR

# LLM settings
LLM_MODEL=gemini-3-flash-preview   # Gemini model to use
LLM_TEMPERATURE=0.3    # Temperature for generation
